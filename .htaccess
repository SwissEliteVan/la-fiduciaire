# .htaccess La Fiduciaire — Apache/Hostinger
# Configuration compatible hébergement mutualisé

# Compression Gzip
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json application/xml image/svg+xml
</IfModule>

# Compression Brotli (si disponible)
<IfModule mod_brotli.c>
  AddOutputFilterByType BROTLI_COMPRESS text/html text/plain text/xml text/css text/javascript application/javascript application/json image/svg+xml
</IfModule>

# Cache headers pour assets statiques
<IfModule mod_expires.c>
  ExpiresActive On

  # CSS et JS : 1 an
  ExpiresByType text/css "access plus 1 year"
  ExpiresByType application/javascript "access plus 1 year"

  # Images : 1 an
  ExpiresByType image/svg+xml "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/webp "access plus 1 year"
  ExpiresByType image/x-icon "access plus 1 year"

  # HTML : 1 jour (permet mises à jour rapides)
  ExpiresByType text/html "access plus 1 day"

  # Fichiers manifest
  ExpiresByType application/manifest+json "access plus 1 week"
</IfModule>

# Cache-Control alternatif avec mod_headers
<IfModule mod_headers.c>
  # Assets statiques immutables
  <FilesMatch "\.(css|js|svg|png|jpg|jpeg|webp|woff|woff2|ttf|eot)$">
    Header set Cache-Control "max-age=31536000, public, immutable"
  </FilesMatch>

  # HTML court cache
  <FilesMatch "\.(html)$">
    Header set Cache-Control "max-age=86400, public"
  </FilesMatch>

  # Headers sécurité (compatibles mutualisé)
  Header always set X-Content-Type-Options "nosniff"
  Header always set X-Frame-Options "SAMEORIGIN"
  Header always set Referrer-Policy "strict-origin-when-cross-origin"

  # Retirer signature serveur (si permis)
  Header unset X-Powered-By
  Header always unset X-Powered-By
</IfModule>

# Désactiver directory listing
Options -Indexes

# Protéger fichiers sensibles
<FilesMatch "^(\.|package\.json|package-lock\.json|README\.md|composer\.json|composer\.lock)">
  Require all denied
</FilesMatch>

# Bloquer accès dossiers sensibles
<IfModule mod_authz_core.c>
  RedirectMatch 404 /\.git
  RedirectMatch 404 /docs/
  RedirectMatch 404 /src/
  RedirectMatch 404 /content/
  RedirectMatch 404 /node_modules/
</IfModule>

# Page erreur 404 personnalisée
ErrorDocument 404 /404.html

# Force HTTPS (si certificat SSL actif)
# Décommenter si HTTPS configuré sur Hostinger
# <IfModule mod_rewrite.c>
#   RewriteEngine On
#   RewriteCond %{HTTPS} off
#   RewriteRule ^(.*)$ https://%{HTTP_HOST}/$1 [L,R=301]
# </IfModule>

# Charset UTF-8 par défaut
AddDefaultCharset UTF-8

# MIME types additionnels
<IfModule mod_mime.c>
  AddType application/javascript .js
  AddType text/css .css
  AddType image/svg+xml .svg
  AddType application/manifest+json .webmanifest
</IfModule>
